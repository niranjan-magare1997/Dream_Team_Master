<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="295dp"
        android:orientation="vertical"
        android:padding="22dp"
        android:layout_gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:fontFamily="@font/comicrelief"
        android:textColor="@color/colorBlueDark"
        android:text="Enter New Dish "/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textSize="16sp"
            android:fontFamily="@font/comicrelief"
            android:textColor="@color/colorGreenAccent"
            android:text="Select Category"/>
        <Spinner
            android:id="@+id/menuSpinner"
            style="@style/Widget.AppCompat.Spinner.DropDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:prompt="@string/category"
            android:spinnerMode="dialog"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="16sp"
            android:fontFamily="@font/comicrelief"
            android:textColor="@color/colorGreenAccent"
            android:text="Add new Dish"/>
        <EditText
            android:id="@+id/subMenuEditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="@color/colorBlueDark"
            android:fontFamily="@font/comicrelief" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:fontFamily="@font/comicrelief"
            android:textColor="@color/colorGreenAccent"
            android:text="Rate"/>
        <EditText
            android:id="@+id/rateEditText"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comicrelief"
            android:layout_weight="0.7"
            android:textSize="16sp"
            android:inputType="number"
            android:textColor="@color/colorBlueDark" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textColor="@color/colorGreenAccent"
            android:fontFamily="@font/comicrelief"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:text="per dish"/>

    </LinearLayout>
    <Button
        android:id="@+id/addSubButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:text="Add"
       android:layout_gravity="center"
        android:fontFamily="@font/comicrelief"
        android:background="@drawable/bg_ui"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="8dp"
        />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>