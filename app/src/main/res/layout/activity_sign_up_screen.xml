<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="26dp"
    android:paddingTop="26dp"
    android:paddingRight="26dp"
    android:paddingBottom="26dp"
    tools:context=".SignUpScreen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/colorMaroon"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/custom_border"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/userNameSignUp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Your Mobile Number"
                    android:textColorHint="@color/colorMaroonLight"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/colorMaroon"
                    app:hintTextAppearance="@color/colorMaroonLight">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/mobileSignup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_person_outline_black_24dp"
                        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                        android:drawablePadding="12dp"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textSize="14dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/createPassword"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Create Password"
                    android:textColorHint="@color/colorMaroonLight"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/colorMaroon"
                    app:hintTextAppearance="@color/colorMaroonLight">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordSignup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/password"
                        android:drawableLeft="@drawable/password"
                        android:drawablePadding="12dp"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textSize="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/userAddress"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Enter Address"
                    android:textColorHint="@color/colorMaroonLight"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/colorMaroon"
                    app:hintTextAppearance="@color/colorMaroonLight">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="12dp"
                        android:maxLines="2"
                        android:textSize="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/spinnerChoice"
                    style="@style/Widget.AppCompat.Spinner.DropDown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:dropDownWidth="wrap_content"
                    android:entries="@array/dropdownChoice"
                    android:prompt="@string/choose" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/userAdharNumber"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Please Enter Your Adhar Number"
                        android:textColorHint="@color/colorMaroonLight"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/colorMaroon"
                        app:hintTextAppearance="@color/colorMaroonLight">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/adharNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="12dp"
                            android:textSize="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/userGST"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Please Enter GST Number"
                        android:textColorHint="@color/colorMaroonLight"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/colorMaroon"
                        app:hintTextAppearance="@color/colorMaroonLight">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/gstNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="12dp"
                            android:inputType="number"
                            android:maxLength="15"
                            android:textSize="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/userHotelName"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint=" Enter Your Hotel Name"
                        android:textColorHint="@color/colorMaroonLight"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/colorMaroon"
                        app:hintTextAppearance="@color/colorMaroonLight">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/hotelName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="12dp"
                            android:textSize="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/signup"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/custom_border"
                    android:gravity="center_horizontal"
                    android:onClick="signUp"
                    android:text="SIGN UP"
                    android:textAlignment="center"
                    android:textColor="@color/colorMaroon"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>