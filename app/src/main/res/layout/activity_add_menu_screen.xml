<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="200dp"
        android:padding="20dp">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_weight="8"
            android:padding="14dp"
            android:paddingTop="20dp"
            app:alignmentMode="alignMargins"
            app:columnCount="1"
            app:columnOrderPreserved="false"
            app:rowCount="4">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:cardBackgroundColor="#d2bd98"
                app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/addMainCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_outline_add_circle_outline_24"
                android:drawablePadding="15dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/comicrelief"
                android:text="Add Category"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#d2bd98"
                app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/addSubCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comicrelief"
                android:text="Add Dish"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_outline_add_circle_outline_24"
                android:drawablePadding="15dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:cardBackgroundColor="#d2bd98"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/editMainCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Edit Category"
                android:fontFamily="@font/comicrelief"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_outline_edit_24"
                android:drawablePadding="15dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#d2bd98"
                app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/editSubCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Edit Dish"
                android:fontFamily="@font/comicrelief"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:textStyle="bold" android:drawableStart="@drawable/ic_outline_edit_24"
                android:drawablePadding="15dp"/>
            </androidx.cardview.widget.CardView>
        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>
</LinearLayout>