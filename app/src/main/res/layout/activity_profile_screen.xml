<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common_activities.ProfileScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/empName"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comicrelief"
                    android:text="+91-"
                    android:textColor="#ffffff"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/empNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999999999"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editProfileButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_below="@id/linear"
                android:layout_alignEnd="@id/linear"
                android:layout_alignRight="@id/linear"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_ui"
                android:gravity="center"
                android:onClick="editProfile">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_edit_24" />
            </LinearLayout>

            <TextView
                android:id="@+id/empName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/comicrelief"
                android:text="Lorem Ipsum"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_marginTop="7dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address : "
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/comicrelief"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/empAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                    android:textSize="16dp"
                    android:fontFamily="@font/comicrelief"
                    android:textColor="#000000"/>
            </LinearLayout>
            <View
                android:layout_width="375dp"
                android:layout_height="1.5dp"
                android:background="#36B6A6"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_marginTop="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adhar Number : "
                    android:fontFamily="@font/comicrelief"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/empAdhar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comicrelief"
                    android:textColor="#000000"
                    android:text="0000000000000000"
                    android:textSize="16sp" />
            </LinearLayout>
            <View
                android:layout_width="375dp"
                android:layout_height="1.5dp"
                android:background="#36B6A6"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_marginTop="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GST Number : "
                    android:fontFamily="@font/comicrelief"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/empGST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:fontFamily="@font/comicrelief"
                    android:text="00FFFF00TT909090"
                    android:textSize="16sp" />
            </LinearLayout>
            <View
                android:layout_width="375dp"
                android:layout_height="1.5dp"
                android:background="#36B6A6"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_marginTop="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotel Name : "
                    android:fontFamily="@font/comicrelief"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/hotelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:fontFamily="@font/comicrelief"
                    android:text="Dream Team"
                    android:textSize="16sp" />
            </LinearLayout>
            <View
                android:layout_width="375dp"
                android:layout_height="1.5dp"
                android:background="#36B6A6"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/changePasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_baseline_edit_24_black"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/comicrelief"
                android:layout_marginTop="20dp"
                android:text="Change Password"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>